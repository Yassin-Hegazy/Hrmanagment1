@model HRMANGMANGMENT.Models.ManagerTeam
@{
    ViewData["Title"] = $"Team - {Model.ManagerName}";
}

<div class="container-fluid mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-person-badge"></i> @Model.ManagerName's Team</h2>
                <p class="mb-0 opacity-75">@Model.DirectReports.Count direct reports</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Index" class="btn btn-secondary hover-lift me-2">
                    <i class="bi bi-arrow-left"></i> Back to Hierarchy
                </a>
                @if (Model.DepartmentId.HasValue)
                {
                    <a asp-action="Department" asp-route-id="@Model.DepartmentId" class="btn btn-outline-primary hover-lift">
                        <i class="bi bi-building"></i> @Model.DepartmentName
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Manager Info -->
    <div class="card glass-card mb-4">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-person-badge"></i> Manager</h5>
        </div>
        <div class="card-body">
            <div class="d-flex align-items-center">
                @if (!string.IsNullOrEmpty(Model.ProfileImage))
                {
                    <img src="~/images/profiles/@Model.ProfileImage" alt="" class="rounded-circle me-3" style="width: 80px; height: 80px; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-success text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <i class="bi bi-person-badge fs-3"></i>
                    </div>
                }
                <div>
                    <h4 class="mb-1">@Model.ManagerName</h4>
                    <p class="text-muted mb-1">@(Model.Position ?? "Manager")</p>
                    <p class="mb-0">
                        <i class="bi bi-building text-primary"></i> @(Model.DepartmentName ?? "No Department")
                    </p>
                </div>
                <div class="ms-auto text-center">
                    <h2 class="text-success mb-0">@Model.DirectReports.Count</h2>
                    <p class="text-muted mb-0">Direct Reports</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Direct Reports -->
    <div class="card glass-card">
        <div class="card-header card-gradient-primary">
            <h5 class="mb-0"><i class="bi bi-people"></i> Direct Reports</h5>
        </div>
        <div class="card-body">
            @if (Model.DirectReports.Any())
            {
                <div class="row g-4">
                    @foreach (var member in Model.DirectReports)
                    {
                        <div class="col-lg-4 col-md-6">
                            <div class="card h-100 hover-lift">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        @if (!string.IsNullOrEmpty(member.ProfileImage))
                                        {
                                            <img src="~/images/profiles/@member.ProfileImage" alt="" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="bg-secondary text-white rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                <i class="bi bi-person"></i>
                                            </div>
                                        }
                                        <div>
                                            <h6 class="mb-0">@member.FullName</h6>
                                            <small class="text-muted">@(member.Position ?? "Employee")</small>
                                        </div>
                                    </div>
                                    @if (member.DirectReports > 0)
                                    {
                                        <p class="small mb-2">
                                            <span class="badge bg-info">@member.DirectReports direct reports</span>
                                        </p>
                                    }
                                </div>
                                <div class="card-footer bg-transparent">
                                    @if (member.IsManager)
                                    {
                                        <a asp-action="Manager" asp-route-id="@member.EmployeeId" class="btn btn-sm btn-outline-success w-100">
                                            <i class="bi bi-people"></i> View Their Team
                                        </a>
                                    }
                                    else if (User.IsInRole("SuperAdmin") || User.IsInRole("SystemAdmin"))
                                    {
                                        <a asp-action="Reassign" asp-route-id="@member.EmployeeId" class="btn btn-sm btn-outline-warning w-100">
                                            <i class="bi bi-arrow-left-right"></i> Reassign
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-people" style="font-size: 4rem; color: #ccc;"></i>
                    <h5 class="mt-3 text-muted">No Direct Reports</h5>
                    <p class="text-muted">This manager doesn't have any direct reports yet.</p>
                </div>
            }
        </div>
    </div>
</div>
