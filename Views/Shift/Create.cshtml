@model HRMANGMANGMENT.Models.ShiftSchedule

@{
    ViewData["Title"] = "Create New Shift";
}

<div class="container mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-clock-fill"></i> Create Shift</h2>
                <p class="mb-0 opacity-75">Define a new work shift schedule</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Index" class="btn btn-secondary hover-lift">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center stagger-animation">
        <div class="col-md-8">
            <div class="card glass-card hover-lift">
                <div class="card-header card-gradient-primary">
                    <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Shift Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label">Shift Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Morning Shift, Night Shift" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Type" class="form-label">Shift Type</label>
                            <select asp-for="Type" class="form-select">
                                <option value="Normal">Normal</option>
                                <option value="Split">Split</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="StartTime" class="form-label">Start Time</label>
                                <input asp-for="StartTime" type="time" class="form-control" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label asp-for="EndTime" class="form-label">End Time</label>
                                <input asp-for="EndTime" type="time" class="form-control" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="BreakDuration" class="form-label">Break Duration (hours)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-cup-hot"></i></span>
                                <input asp-for="BreakDuration" type="number" step="0.5" class="form-control" value="1" />
                            </div>
                            <span asp-validation-for="BreakDuration" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-4 p-3 border rounded bg-light">
                            <input class="form-check-input" type="checkbox" asp-for="Status" checked />
                            <label class="form-check-label" asp-for="Status">
                                <strong>Active Status</strong>
                                <small class="d-block text-muted">Uncheck if you want to create this shift as inactive</small>
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save"></i> Create Shift
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
