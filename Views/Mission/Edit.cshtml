@model HRMANGMANGMENT.Models.Mission
@{
    ViewData["Title"] = "Edit Mission";
}

<div class="container mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-pencil-square"></i> Edit Mission</h2>
                <p class="mb-0 opacity-75">Update mission status</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Index" class="btn btn-secondary hover-lift">
                    <i class="bi bi-arrow-left"></i> Back to All Missions
                </a>
            </div>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card glass-card hover-lift">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-geo-alt"></i> Mission Details</h5>
                </div>
                <div class="card-body">
                    <!-- Mission Info (Read-only) -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label text-muted">Employee</label>
                            <p class="form-control-plaintext fw-bold">@Model.EmployeeName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Manager</label>
                            <p class="form-control-plaintext">@(Model.ManagerName ?? "Not Assigned")</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label text-muted">Destination</label>
                            <p class="form-control-plaintext"><i class="bi bi-geo-alt text-primary"></i> @Model.Destination</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Duration</label>
                            <p class="form-control-plaintext"><span class="badge bg-info">@Model.Duration days</span></p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label text-muted">Start Date</label>
                            <p class="form-control-plaintext">@Model.StartDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">End Date</label>
                            <p class="form-control-plaintext">@Model.EndDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>

                    <hr />

                    <!-- Edit Form -->
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.MissionId" />

                        <div class="mb-4">
                            <label for="status" class="form-label"><i class="bi bi-flag"></i> Status <span class="text-danger">*</span></label>
                            <select class="form-select form-select-lg" id="status" name="status" required>
                                <option value="Pending" selected="@(Model.Status == "Pending")">Pending</option>
                                <option value="Approved" selected="@(Model.Status == "Approved")">Approved</option>
                                <option value="Rejected" selected="@(Model.Status == "Rejected")">Rejected</option>
                                <option value="Completed" selected="@(Model.Status == "Completed")">Completed</option>
                                <option value="Cancelled" selected="@(Model.Status == "Cancelled")">Cancelled</option>
                            </select>
                            <div class="form-text">Current status: <span class="badge @Model.StatusBadgeClass">@Model.Status</span></div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Update Status
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
