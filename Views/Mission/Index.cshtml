@model IEnumerable<HRMANGMANGMENT.Models.Mission>
@{
    ViewData["Title"] = "All Missions";
}

<div class="container-fluid mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-geo-alt-fill"></i> Mission Management</h2>
                <p class="mb-0 opacity-75">View and manage all employee missions (HR Admin)</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Assign" class="btn btn-success hover-lift">
                    <i class="bi bi-plus-circle"></i> Assign New Mission
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Missions Table -->
    <div class="card glass-card">
        <div class="card-header card-gradient-primary">
            <h5 class="mb-0"><i class="bi bi-table"></i> All Missions</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Employee</th>
                            <th>Destination</th>
                            <th>Duration</th>
                            <th>Dates</th>
                            <th>Manager</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var mission in Model)
                            {
                                <tr>
                                    <td>@mission.MissionId</td>
                                    <td><strong>@mission.EmployeeName</strong></td>
                                    <td><i class="bi bi-geo-alt text-primary"></i> @mission.Destination</td>
                                    <td><span class="badge bg-info">@mission.Duration days</span></td>
                                    <td>@mission.StartDate.ToString("MMM dd") - @mission.EndDate.ToString("MMM dd")</td>
                                    <td>@(mission.ManagerName ?? "-")</td>
                                    <td><span class="badge @mission.StatusBadgeClass">@mission.Status</span></td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@mission.MissionId" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5">
                                    <i class="bi bi-geo-alt" style="font-size: 3rem; color: #ccc;"></i>
                                    <p class="text-muted mt-3">No missions found</p>
                                    <a asp-action="Assign" class="btn btn-success">
                                        <i class="bi bi-plus-circle"></i> Assign First Mission
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
