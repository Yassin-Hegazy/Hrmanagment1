@model HRMANGMANGMENT.Models.Mission
@{
    ViewData["Title"] = "Mission Details";
}

<div class="container mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-geo-alt"></i> Mission Details</h2>
                <p class="mb-0 opacity-75">View mission information</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="MyMissions" class="btn btn-secondary hover-lift">
                    <i class="bi bi-arrow-left"></i> Back to My Missions
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card glass-card hover-lift">
                <div class="card-header card-gradient-info d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> @Model.Destination</h5>
                    <span class="badge @Model.StatusBadgeClass fs-6">@Model.Status</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-primary text-white p-3 me-3">
                                    <i class="bi bi-calendar-event fs-4"></i>
                                </div>
                                <div>
                                    <small class="text-muted">Start Date</small>
                                    <h5 class="mb-0">@Model.StartDate.ToString("MMMM dd, yyyy")</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-4">
                            <div class="d-flex align-items-center">
                                <div class="rounded-circle bg-danger text-white p-3 me-3">
                                    <i class="bi bi-calendar-check fs-4"></i>
                                </div>
                                <div>
                                    <small class="text-muted">End Date</small>
                                    <h5 class="mb-0">@Model.EndDate.ToString("MMMM dd, yyyy")</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <hr />
                    
                    <div class="row text-center">
                        <div class="col-md-4">
                            <i class="bi bi-clock text-info" style="font-size: 2rem;"></i>
                            <h4 class="mt-2">@Model.Duration</h4>
                            <p class="text-muted">Days</p>
                        </div>
                        <div class="col-md-4">
                            <i class="bi bi-person text-success" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">@Model.EmployeeName</h6>
                            <p class="text-muted">Assignee</p>
                        </div>
                        <div class="col-md-4">
                            <i class="bi bi-person-badge text-warning" style="font-size: 2rem;"></i>
                            <h6 class="mt-2">@(Model.ManagerName ?? "Not Assigned")</h6>
                            <p class="text-muted">Manager</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
