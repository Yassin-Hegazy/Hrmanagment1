@model IEnumerable<HRMANGMANGMENT.Models.Mission>
@{
    ViewData["Title"] = "My Missions";
}

<div class="container-fluid mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-geo-alt"></i> My Missions</h2>
                <p class="mb-0 opacity-75">View your assigned missions and their status</p>
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-info fs-6">
                    <i class="bi bi-list-check"></i> @(Model?.Count() ?? 0) Missions
                </span>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Mission Cards -->
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var mission in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card glass-card hover-lift h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="mb-0"><i class="bi bi-geo-alt-fill text-primary"></i> @mission.Destination</h6>
                            <span class="badge @mission.StatusBadgeClass">@mission.Status</span>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <i class="bi bi-calendar-event text-muted"></i>
                                <strong>Duration:</strong> @mission.Duration days
                            </div>
                            <div class="mb-3">
                                <i class="bi bi-calendar-range text-muted"></i>
                                @mission.StartDate.ToString("MMM dd") - @mission.EndDate.ToString("MMM dd, yyyy")
                            </div>
                            @if (!string.IsNullOrEmpty(mission.ManagerName))
                            {
                                <div class="mb-2">
                                    <i class="bi bi-person-badge text-muted"></i>
                                    <strong>Manager:</strong> @mission.ManagerName
                                </div>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <a asp-action="Details" asp-route-id="@mission.MissionId" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card glass-card text-center py-5">
                    <div class="card-body">
                        <i class="bi bi-geo-alt" style="font-size: 4rem; color: #ccc;"></i>
                        <h5 class="mt-3 text-muted">No Missions Assigned</h5>
                        <p class="text-muted">You don't have any missions assigned yet.</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
