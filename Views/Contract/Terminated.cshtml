@model IEnumerable<HRMANGMANGMENT.Models.Termination>

@{
    ViewData["Title"] = "Terminated Contracts";
}

<div class="container-fluid mt-4 animate-fade-in">
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-file-earmark-x-fill text-danger"></i> Terminated Contracts</h2>
                <p class="mb-0 opacity-75">History of contract terminations</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Index" class="btn btn-secondary hover-lift">
                    <i class="bi bi-arrow-left"></i> Back to Contracts
                </a>
            </div>
        </div>
    </div>

    <!-- Terminated Contracts List -->
    <div class="row stagger-animation">
        <div class="col-12">
            <div class="card glass-card">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Employee</th>
                                    <th>Termination Date</th>
                                    <th>Reason</th>
                                    <th>Contract ID</th>
                                    <th class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.ProfileImage))
                                                    {
                                                        <img src="~/uploads/profiles/@item.ProfileImage" class="rounded-circle me-3" width="40" height="40" style="object-fit: cover;" alt="@item.EmployeeName">
                                                    }
                                                    else
                                                    {
                                                        <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                                            <i class="bi bi-person-fill text-secondary"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <div class="fw-bold">@item.EmployeeName</div>
                                                        <div class="small text-muted">@item.DepartmentName</div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 p-2">
                                                    <i class="bi bi-calendar-x"></i> @item.Date.ToString("MMM dd, yyyy")
                                                </span>
                                            </td>
                                            <td>
                                                <span class="text-wrap" style="max-width: 300px; display: inline-block;">
                                                    @(item.Reason?.Length > 100 ? item.Reason.Substring(0, 100) + "..." : item.Reason)
                                                </span>
                                            </td>
                                            <td><span class="badge bg-secondary">#@item.ContractId</span></td>
                                            <td class="text-end pe-4">
                                                <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#reasonModal-@item.TerminationId">
                                                    <i class="bi bi-eye"></i> View Reason
                                                </button>
                                            </td>
                                        </tr>

                                        <!-- Reason Modal -->
                                        <div class="modal fade" id="reasonModal-@item.TerminationId" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header card-gradient-danger text-white">
                                                        <h5 class="modal-title">Termination Details</h5>
                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label class="fw-bold">Employee</label>
                                                            <p>@item.EmployeeName</p>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="fw-bold">Date</label>
                                                            <p>@item.Date.ToString("D")</p>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label class="fw-bold">Reason</label>
                                                            <div class="p-3 bg-light rounded border">
                                                                @item.Reason
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center py-5 text-muted">
                                            <i class="bi bi-clipboard-check display-4 d-block mb-3"></i>
                                            No terminated contracts found.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
