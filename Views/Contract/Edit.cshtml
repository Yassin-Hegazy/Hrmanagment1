@model HRMANGMANGMENT.Models.Contract

@{
    ViewData["Title"] = "Edit Contract";
}

<div class="container mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-12">
                <h2><i class="bi bi-pencil-fill"></i> Edit Contract</h2>
                <p class="mb-0 opacity-75">Update contract information</p>
            </div>
        </div>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ContractId" />
        <input type="hidden" asp-for="EmployeeId" />
        
        <div class="row stagger-animation">
            <!-- Contract Information -->
            <div class="col-md-6 mb-4">
                <div class="card glass-card hover-lift animate-slide-left">
                    <div class="card-header card-gradient-primary">
                        <h5 class="mb-0"><i class="bi bi-file-text-fill"></i> Contract Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-hash text-primary"></i> Contract ID
                            </label>
                            <input type="text" class="form-control" value="#@Model.ContractId" disabled />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="bi bi-person text-info"></i> Employee
                            </label>
                            <input type="text" class="form-control" value="@Model.EmployeeName" disabled />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ContractType" class="form-label">
                                <i class="bi bi-briefcase text-success"></i> Contract Type <span class="text-danger">*</span>
                            </label>
                            <select asp-for="ContractType" class="form-select" required>
                                <option value="">Select Type</option>
                                <option value="Full-time">Full-time</option>
                                <option value="Part-time">Part-time</option>
                                <option value="Consultant">Consultant</option>
                                <option value="Internship">Internship</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label">
                                <i class="bi bi-activity text-warning"></i> Status
                            </label>
                            <select asp-for="Status" class="form-select">
                                <option value="Active">Active</option>
                                <option value="Pending">Pending</option>
                                <option value="Renewed">Renewed</option>
                                <option value="Terminated">Terminated</option>
                                <option value="Expired">Expired</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Dates -->
            <div class="col-md-6 mb-4">
                <div class="card glass-card hover-lift animate-slide-right">
                    <div class="card-header card-gradient-info">
                        <h5 class="mb-0"><i class="bi bi-calendar-fill"></i> Contract Dates</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label">
                                <i class="bi bi-calendar-check text-success"></i> Start Date <span class="text-danger">*</span>
                            </label>
                            <input asp-for="StartDate" type="date" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label">
                                <i class="bi bi-calendar-x text-danger"></i> End Date
                            </label>
                            <input asp-for="EndDate" type="date" class="form-control" />
                            <small class="text-muted">Leave empty for permanent contracts</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Salary" class="form-label">
                                <i class="bi bi-cash text-success"></i> Salary
                            </label>
                            <input asp-for="Salary" type="number" step="0.01" class="form-control" placeholder="0.00" />
                            <small class="text-muted">Annual salary amount</small>
                        </div>

                        @if (Model.RenewalDate.HasValue)
                        {
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="bi bi-arrow-repeat text-info"></i> Last Renewed
                                </label>
                                <input type="text" class="form-control" value="@Model.RenewalDate.Value.ToString("MMMM dd, yyyy")" disabled />
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Terms -->
            <div class="col-md-12 mb-4">
                <div class="card glass-card hover-lift animate-scale">
                    <div class="card-header card-gradient-warning">
                        <h5 class="mb-0"><i class="bi bi-file-text"></i> Terms & Conditions</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Terms" class="form-label">
                                <i class="bi bi-list-ul text-info"></i> Contract Terms
                            </label>
                            <textarea asp-for="Terms" class="form-control" rows="6" 
                                      placeholder="Enter contract terms, conditions, benefits, etc..."></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="card glass-card animate-scale">
            <div class="card-body text-center">
                <button type="submit" class="btn btn-primary btn-lg hover-lift">
                    <i class="bi bi-save-fill"></i> Save Changes
                </button>
                <a asp-action="Details" asp-route-id="@Model.ContractId" class="btn btn-info btn-lg hover-lift">
                    <i class="bi bi-eye-fill"></i> View Details
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-lg hover-lift">
                    <i class="bi bi-x-circle-fill"></i> Cancel
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
