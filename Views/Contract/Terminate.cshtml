@model HRMANGMANGMENT.Models.Contract

@{
    ViewData["Title"] = "Terminate Contract";
}

<div class="container mt-4 animate-fade-in">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card glass-card hover-lift border-danger">
                <div class="card-header card-gradient-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-x-circle-fill"></i> Terminate Contract</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
                        <h3 class="mt-3 text-danger">Are you sure?</h3>
                        <p class="lead">You are about to terminate the contract for:</p>
                        <h4>@Model.EmployeeName</h4>
                        <p class="text-muted">Contract ID: #@Model.ContractId</p>
                    </div>

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle"></i> This action will set the contract status to <strong>Terminated</strong> and cannot be easily undone.
                    </div>

                    <form asp-action="Terminate" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="contractId" value="@Model.ContractId" />
                        
                        <div class="mb-3 text-start">
                            <label class="form-label">Termination Date</label>
                            <input type="date" name="terminationDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        </div>

                        <div class="mb-4 text-start">
                            <label class="form-label">Reason for Termination <span class="text-danger">*</span></label>
                            <textarea name="reason" class="form-control" rows="4" required placeholder="Please provide a detailed reason for termination..."></textarea>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-check-circle"></i> Yes, Terminate Contract
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.ContractId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> No, Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
