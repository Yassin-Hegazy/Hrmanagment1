@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card glass-card text-center">
                <div class="card-body p-5">
                    <i class="bi bi-shield-x" style="font-size: 80px; color: #dc3545;"></i>
                    <h2 class="mt-4 mb-3">Access Denied</h2>
                    <p class="text-muted mb-4">
                        You don't have permission to access this resource. 
                        Please contact your system administrator if you believe this is an error.
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="bi bi-house-fill"></i> Go to Home
                        </a>
                        <a asp-action="Logout" asp-controller="Account" class="btn btn-secondary">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
