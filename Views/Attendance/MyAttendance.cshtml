@model IEnumerable<HRMANGMANGMENT.Models.Attendance>

@{
    ViewData["Title"] = "My Attendance";
    var currentAttendance = ViewBag.CurrentAttendance as HRMANGMANGMENT.Models.Attendance;
    var isClockedIn = (bool)(ViewBag.IsClockedIn ?? false);
}

<div class="container-fluid mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2><i class="bi bi-clock-history"></i> My Attendance</h2>
                <p class="mb-0 opacity-75">Track your time and view attendance history</p>
            </div>
            <div class="col-md-4 text-end">
                <!-- Offline Sync Indicator -->
                <button type="button" id="offlineSyncIndicator" class="btn btn-warning d-none me-2" onclick="OfflineAttendance.syncQueue()" title="Click to sync offline records">
                    <i class="bi bi-cloud-upload"></i> <span id="offlineQueueBadge">0</span> Pending
                </button>
                <a asp-action="CorrectionRequest" class="btn btn-warning hover-lift">
                    <i class="bi bi-pencil-square"></i> Request Correction
                </a>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show animate-slide-right" role="alert">
            <i class="bi bi-check-circle-fill"></i> <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show animate-slide-right" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Current Status Card -->
        <div class="col-md-6 mb-4">
            <div class="card glass-card hover-lift h-100">
                <div class="card-header card-gradient-primary">
                    <h5 class="mb-0"><i class="bi bi-activity"></i> Current Status</h5>
                </div>
                <div class="card-body text-center py-5">
                    @if (isClockedIn)
                    {
                        <i class="bi bi-clock-fill text-success" style="font-size: 4rem;"></i>
                        <h3 class="mt-3 text-success">Clocked In</h3>
                        <p class="text-muted">Entry: @currentAttendance?.EntryTime?.ToString("hh:mm tt")</p>
                        
                        <form asp-action="ClockOut" method="post" class="mt-4">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger btn-lg px-5 hover-lift">
                                <i class="bi bi-box-arrow-right"></i> Clock Out
                            </button>
                        </form>
                    }
                    else
                    {
                        <i class="bi bi-clock text-muted" style="font-size: 4rem;"></i>
                        <h3 class="mt-3 text-muted">Not Clocked In</h3>
                        @if (currentAttendance?.ExitTime != null)
                        {
                            <p class="text-muted">Last Exit: @currentAttendance.ExitTime.Value.ToString("hh:mm tt")</p>
                        }
                        
                        <form asp-action="ClockIn" method="post" class="mt-4">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success btn-lg px-5 hover-lift">
                                <i class="bi bi-box-arrow-in-right"></i> Clock In
                            </button>
                        </form>
                    }
                    
                    <div class="mt-4">
                        <small class="text-muted">
                            <i class="bi bi-calendar-event"></i> @DateTime.Now.ToString("dddd, MMMM dd, yyyy")
                            <br />
                            <i class="bi bi-clock"></i> <span id="currentTime">@DateTime.Now.ToString("hh:mm:ss tt")</span>
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Today's Summary Card -->
        <div class="col-md-6 mb-4">
            <div class="card glass-card hover-lift h-100">
                <div class="card-header card-gradient-info">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Today's Summary</h5>
                </div>
                <div class="card-body">
                    @{
                        var todayAttendance = Model?.FirstOrDefault(a => a.EntryTime?.Date == DateTime.Today);
                    }
                    @if (todayAttendance != null)
                    {
                        <div class="row">
                            <div class="col-6 mb-3">
                                <div class="text-center p-3 rounded" style="background: rgba(var(--german-gold-rgb), 0.1);">
                                    <i class="bi bi-box-arrow-in-right text-success" style="font-size: 2rem;"></i>
                                    <p class="mb-1 mt-2"><strong>Check In</strong></p>
                                    <p class="mb-0">@todayAttendance.EntryTime?.ToString("hh:mm tt")</p>
                                </div>
                            </div>
                            <div class="col-6 mb-3">
                                <div class="text-center p-3 rounded" style="background: rgba(var(--german-red-rgb), 0.1);">
                                    <i class="bi bi-box-arrow-right text-danger" style="font-size: 2rem;"></i>
                                    <p class="mb-1 mt-2"><strong>Check Out</strong></p>
                                    <p class="mb-0">@(todayAttendance.ExitTime?.ToString("hh:mm tt") ?? "--:--")</p>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="text-center p-3 rounded" style="background: rgba(0, 0, 0, 0.05);">
                                    <i class="bi bi-hourglass-split" style="font-size: 2rem;"></i>
                                    <p class="mb-1 mt-2"><strong>Duration</strong></p>
                                    <h4 class="mb-0 gradient-text">@todayAttendance.DurationFormatted</h4>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-calendar-x" style="font-size: 3rem; color: #ccc;"></i>
                            <p class="text-muted mt-3">No attendance recorded today</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance History -->
    <div class="card glass-card hover-lift">
        <div class="card-header card-gradient-warning">
            <h5 class="mb-0"><i class="bi bi-calendar3"></i> Attendance History (Last 30 Days)</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th><i class="bi bi-calendar"></i> Date</th>
                            <th><i class="bi bi-box-arrow-in-right"></i> Check In</th>
                            <th><i class="bi bi-box-arrow-right"></i> Check Out</th>
                            <th><i class="bi bi-hourglass-split"></i> Duration</th>
                            <th><i class="bi bi-activity"></i> Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var record in Model)
                            {
                                <tr>
                                    <td>@record.EntryTime?.ToString("MMM dd, yyyy")</td>
                                    <td>@record.EntryTime?.ToString("hh:mm tt")</td>
                                    <td>@(record.ExitTime?.ToString("hh:mm tt") ?? "--:--")</td>
                                    <td>@record.DurationFormatted</td>
                                    <td>
                                        @{
                                            var statusClass = record.Status switch
                                            {
                                                "Present" => "bg-success",
                                                "Late" => "bg-warning",
                                                "Clocked In" => "bg-info",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass">@record.Status</span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5">
                                    <i class="bi bi-calendar-x" style="font-size: 3rem; color: #ccc;"></i>
                                    <p class="text-muted mt-3">No attendance records found</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/attendance-offline.js"></script>
    <script>
        // Update current time every second
        setInterval(function() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('en-US');
            document.getElementById('currentTime').textContent = timeString;
        }, 1000);
    </script>
}
