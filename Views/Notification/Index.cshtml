@model IEnumerable<HRMANGMANGMENT.Models.Notification>
@{
    ViewData["Title"] = "Notifications";
    var unreadCount = ViewBag.UnreadCount ?? 0;
}

<div class="container-fluid mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-bell"></i> Notifications</h2>
                <p class="mb-0 opacity-75">View all your notifications</p>
            </div>
            <div class="col-md-6 text-end">
                <div class="d-flex flex-wrap justify-content-end gap-2">
                    @if ((int)unreadCount > 0)
                    {
                        <form asp-action="MarkAllRead" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-primary hover-lift">
                                <i class="bi bi-check-all"></i> Mark All as Read
                            </button>
                        </form>
                    }
                    @if (User.IsInRole("Manager") || User.IsInRole("SuperAdmin") || User.IsInRole("HRAdmin") || User.IsInRole("SystemAdmin"))
                    {
                        <a asp-action="SendToTeam" class="btn btn-success hover-lift">
                            <i class="bi bi-send"></i> Send to Team
                        </a>
                        <a asp-action="History" class="btn btn-info hover-lift">
                            <i class="bi bi-clock-history"></i> Sent History
                        </a>
                    }
                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("HRAdmin"))
                    {
                        <a asp-action="Broadcast" class="btn btn-primary hover-lift">
                            <i class="bi bi-megaphone"></i> Broadcast
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Unread Count Badge -->
    @if ((int)unreadCount > 0)
    {
        <div class="alert alert-info mb-4">
            <i class="bi bi-info-circle"></i> You have <strong>@unreadCount</strong> unread notification(s).
        </div>
    }

    <!-- Notifications List -->
    <div class="card glass-card">
        <div class="card-header card-gradient-primary">
            <h5 class="mb-0"><i class="bi bi-inbox"></i> All Notifications</h5>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="list-group list-group-flush">
                    @foreach (var notification in Model)
                    {
                        var bgClass = notification.IsRead ? "" : "bg-light";
                        <div class="list-group-item list-group-item-action @bgClass d-flex align-items-start">
                            <div class="me-3">
                                <span class="badge @notification.UrgencyBadgeClass rounded-pill p-2">
                                    <i class="bi @notification.TypeIcon"></i>
                                </span>
                            </div>
                            <div class="flex-grow-1">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-1 @(notification.IsRead ? "text-muted" : "fw-bold")">
                                        @notification.NotificationType
                                    </h6>
                                    <small class="text-muted">@notification.TimeAgo</small>
                                </div>
                                <p class="mb-1 @(notification.IsRead ? "text-muted" : "")">@notification.MessageContent</p>
                                <div class="d-flex align-items-center gap-2 flex-wrap">
                                    <small class="badge @notification.UrgencyBadgeClass">@notification.Urgency</small>
                                    @if (!string.IsNullOrEmpty(notification.SenderName))
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-person"></i> From: @notification.SenderName
                                        </small>
                                    }
                                    @if (!notification.IsRead)
                                    {
                                        <form asp-action="MarkAsRead" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="notificationId" value="@notification.NotificationId" />
                                            <button type="submit" class="btn btn-sm btn-link p-0">
                                                <i class="bi bi-check-circle"></i> Mark as read
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <small class="text-success"><i class="bi bi-check-circle-fill"></i> Read</small>
                                        @if (notification.ReadAt.HasValue)
                                        {
                                            <small class="text-muted">(@notification.ReadAt.Value.ToString("MMM dd, HH:mm"))</small>
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-bell-slash" style="font-size: 4rem; color: #ccc;"></i>
                    <h5 class="mt-3 text-muted">No Notifications</h5>
                    <p class="text-muted">You don't have any notifications yet.</p>
                </div>
            }
        </div>
    </div>
</div>
