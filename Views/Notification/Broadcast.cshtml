@{
    ViewData["Title"] = "Broadcast Notification";
}

<div class="container mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-megaphone"></i> Broadcast Notification</h2>
                <p class="mb-0 opacity-75">Send a notification to ALL employees in the organization</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Index" class="btn btn-secondary hover-lift">
                    <i class="bi bi-arrow-left"></i> Back to Notifications
                </a>
            </div>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card glass-card hover-lift">
                <div class="card-header card-gradient-primary">
                    <h5 class="mb-0"><i class="bi bi-broadcast"></i> Compose Broadcast</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Broadcast" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="notificationType" class="form-label">
                                <i class="bi bi-tag"></i> Notification Type <span class="text-danger">*</span>
                            </label>
                            <select class="form-select" id="notificationType" name="notificationType" required>
                                <option value="Announcement" selected>Announcement - General company news</option>
                                <option value="Policy Update">Policy Update - HR policy changes</option>
                                <option value="System Alert">System Alert - System maintenance/updates</option>
                                <option value="Event">Event - Company events</option>
                                <option value="Reminder">Reminder - Important reminders</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="urgency" class="form-label">
                                <i class="bi bi-exclamation-circle"></i> Urgency Level <span class="text-danger">*</span>
                            </label>
                            <select class="form-select" id="urgency" name="urgency" required>
                                <option value="Low">Low - Informational</option>
                                <option value="Normal" selected>Normal - Standard</option>
                                <option value="Medium">Medium - Important</option>
                                <option value="High">High - Urgent</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label for="message" class="form-label">
                                <i class="bi bi-chat-text"></i> Message <span class="text-danger">*</span>
                            </label>
                            <textarea class="form-control" id="message" name="message" rows="5" required 
                                      placeholder="Enter your broadcast message here..."></textarea>
                            <div class="form-text">This message will be sent to ALL active employees in the organization.</div>
                        </div>

                        <div class="alert alert-warning mb-4">
                            <i class="bi bi-exclamation-triangle"></i> 
                            <strong>Warning:</strong> This notification will be sent to <strong>ALL</strong> active employees immediately.
                            Please review your message carefully before sending.
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-megaphone"></i> Send Broadcast
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
