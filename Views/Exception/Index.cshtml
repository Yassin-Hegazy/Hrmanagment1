@model IEnumerable<HRMANGMANGMENT.Models.ExceptionDay>

@{
    ViewData["Title"] = "Exception Management";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="fas fa-calendar-times"></i> Exception Management</h2>
            <p class="text-muted">Manage holidays, special events, and non-working days</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add Exception
            </a>
            <a asp-action="Calendar" class="btn btn-outline-secondary">
                <i class="fas fa-calendar"></i> Calendar View
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Filter by Category</label>
                    <select name="category" class="form-select" onchange="this.form.submit()">
                        <option value="">All Categories</option>
                        <option value="Holiday" selected="@(ViewBag.SelectedCategory == "Holiday")">Holiday</option>
                        <option value="Special Event" selected="@(ViewBag.SelectedCategory == "Special Event")">Special Event</option>
                        <option value="Company Closure" selected="@(ViewBag.SelectedCategory == "Company Closure")">Company Closure</option>
                    </select>
                </div>
            </form>
        </div>
    </div>

    <!-- Exceptions Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var exception in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@exception.Name</strong>
                                        @if (exception.IsRecurring)
                                        {
                                            <span class="badge bg-info ms-2">
                                                <i class="fas fa-redo"></i> Recurring
                                            </span>
                                        }
                                    </td>
                                    <td>@exception.CategoryDisplay</td>
                                    <td>@exception.Date.ToString("dddd, MMMM dd, yyyy")</td>
                                    <td>
                                        <span class="@exception.StatusBadgeClass">
                                            @exception.Status
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Edit" asp-route-id="@exception.ExceptionId" 
                                               class="btn btn-outline-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@exception.ExceptionId" 
                                                  method="post" class="d-inline" 
                                                  onsubmit="return confirm('Are you sure you want to delete this exception?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No exceptions found. Create one to get started.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add First Exception
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
