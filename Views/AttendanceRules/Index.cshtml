@{
    ViewData["Title"] = "Attendance Rules Configuration";
}

<div class="container mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-gear-fill"></i> Attendance Rules</h2>
                <p class="mb-0 opacity-75">Configure grace periods, penalties, and time rules</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-controller="Attendance" asp-action="TeamSummary" class="btn btn-secondary hover-lift">
                    <i class="bi bi-arrow-left"></i> Back to Attendance
                </a>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show animate-slide-right" role="alert">
            <i class="bi bi-check-circle-fill"></i> <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show animate-slide-right" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Grace Period Configuration -->
        <div class="col-md-4 mb-4">
            <div class="card glass-card hover-lift h-100">
                <div class="card-header card-gradient-info">
                    <h5 class="mb-0"><i class="bi bi-clock"></i> Grace Period</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Allow employees to clock in late without penalty.</p>
                    <form asp-action="SetGracePeriod" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="gracePeriodMinutes" class="form-label">Grace Period (minutes)</label>
                            <input type="number" class="form-control" id="gracePeriodMinutes" name="gracePeriodMinutes" 
                                   value="15" min="0" max="60" required />
                            <small class="text-muted">Employees can be this many minutes late without being marked "Late"</small>
                        </div>
                        <button type="submit" class="btn btn-info w-100">
                            <i class="bi bi-save"></i> Update Grace Period
                        </button>
                    </form>
                </div>
                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i> Typical: 10-15 minutes
                    </small>
                </div>
            </div>
        </div>

        <!-- Penalty Threshold Configuration -->
        <div class="col-md-4 mb-4">
            <div class="card glass-card hover-lift h-100">
                <div class="card-header card-gradient-warning">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Penalty Threshold</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Set deductions for excessive lateness.</p>
                    <form asp-action="SetPenaltyThreshold" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="lateThresholdMinutes" class="form-label">Late Threshold (minutes)</label>
                            <input type="number" class="form-control" id="lateThresholdMinutes" name="lateThresholdMinutes" 
                                   value="30" min="1" max="120" required />
                        </div>
                        <div class="mb-3">
                            <label for="penaltyAmount" class="form-label">Penalty Amount ($)</label>
                            <input type="number" step="0.01" class="form-control" id="penaltyAmount" name="penaltyAmount" 
                                   value="5.00" min="0" max="100" required />
                            <small class="text-muted">Deduction amount when threshold is exceeded</small>
                        </div>
                        <button type="submit" class="btn btn-warning w-100">
                            <i class="bi bi-save"></i> Set Penalty Threshold
                        </button>
                    </form>
                </div>
                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i> Applied after grace period
                    </small>
                </div>
            </div>
        </div>

        <!-- Short-Time Rules Configuration -->
        <div class="col-md-4 mb-4">
            <div class="card glass-card hover-lift h-100">
                <div class="card-header card-gradient-primary">
                    <h5 class="mb-0"><i class="bi bi-hourglass-split"></i> Short-Time Rules</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Define rules for early departures or incomplete shifts.</p>
                    <form asp-action="SetShortTimeRules" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="shortTimeThresholdMinutes" class="form-label">Threshold (minutes)</label>
                            <input type="number" class="form-control" id="shortTimeThresholdMinutes" name="shortTimeThresholdMinutes" 
                                   value="60" min="15" max="240" required />
                            <small class="text-muted">Minimum time to avoid short-time warning</small>
                        </div>
                        <div class="alert alert-light mb-3">
                            <small>
                                <strong>Penalty Type:</strong> Warning<br />
                                <strong>Applies to:</strong> Late arrivals & early departures
                            </small>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-save"></i> Configure Rules
                        </button>
                    </form>
                </div>
                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i> Issues warnings in LatenessPolicy
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Information Panel -->
    <div class="card glass-card">
        <div class="card-header card-gradient-success">
            <h5 class="mb-0"><i class="bi bi-lightbulb"></i> How Attendance Rules Work</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <h6 class="text-info"><i class="bi bi-1-circle-fill"></i> Grace Period</h6>
                    <p class="small">Employees arriving within the grace period are marked <span class="badge bg-success">Present</span>. Beyond this, they're marked <span class="badge bg-warning">Late</span>.</p>
                </div>
                <div class="col-md-4">
                    <h6 class="text-warning"><i class="bi bi-2-circle-fill"></i> Penalty Threshold</h6>
                    <p class="small">When lateness exceeds the threshold, the specified penalty amount is deducted. This is recorded in the LatenessPolicy table.</p>
                </div>
                <div class="col-md-4">
                    <h6 class="text-primary"><i class="bi bi-3-circle-fill"></i> Short-Time Rules</h6>
                    <p class="small">Employees leaving early or arriving very late receive a warning. Helps track chronic attendance issues.</p>
                </div>
            </div>
            <hr />
            <div class="alert alert-warning mb-0">
                <i class="bi bi-exclamation-triangle"></i> <strong>Important:</strong> Changes take effect immediately for all future attendance records. Existing records are not retroactively modified.
            </div>
        </div>
    </div>

    <!-- Leave Sync Section -->
    <div class="card glass-card mt-4">
        <div class="card-header" style="background: linear-gradient(135deg, #8b5cf6, #a78bfa); color: white;">
            <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Leave - Attendance Integration</h5>
        </div>
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <p>Sync approved leave with attendance records. This updates shift assignments to reflect "On Leave" status.</p>
                    <form asp-action="SyncLeaveWithAttendance" method="post" class="row g-3">
                        @Html.AntiForgeryToken()
                        <div class="col-md-6">
                            <label for="vacationPackageId" class="form-label">Vacation Package ID</label>
                            <input type="number" class="form-control" id="vacationPackageId" name="vacationPackageId" required min="1" placeholder="Leave ID">
                        </div>
                        <div class="col-md-6">
                            <label for="employeeId" class="form-label">Employee ID</label>
                            <input type="number" class="form-control" id="employeeId" name="employeeId" required min="1" placeholder="Employee ID">
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-purple hover-lift">
                                <i class="bi bi-arrow-repeat"></i> Sync Leave with Attendance
                            </button>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <div class="alert alert-info mb-0">
                        <h6><i class="bi bi-info-circle"></i> How Leave Sync Works:</h6>
                        <ul class="mb-0 small">
                            <li>Approved leave from VacationLeave table</li>
                            <li>Updates ShiftAssignment status to "On Leave"</li>
                            <li>Prevents attendance penalties during leave</li>
                            <li>Uses <code>LinkVacationToShift</code> procedure</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-purple {
        background: linear-gradient(135deg, #8b5cf6, #a78bfa);
        color: white;
        border: none;
    }
    .btn-purple:hover {
        background: linear-gradient(135deg, #7c3aed, #8b5cf6);
        color: white;
    }
</style>
