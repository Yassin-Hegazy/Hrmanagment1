@model HRMANGMANGMENT.Models.LeaveType

@{
    ViewData["Title"] = "Add Leave Type";
}

<div class="container mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-tags-fill"></i> Add Leave Type</h2>
                <p class="mb-0 opacity-75">Define a new type of leave</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="LeaveTypes" class="btn btn-secondary hover-lift">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center stagger-animation">
        <div class="col-md-8">
            <div class="card glass-card hover-lift">
                <div class="card-header card-gradient-success text-white">
                    <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Leave Type Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateType" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-4">
                            <label asp-for="LeaveTypeName" class="form-label">Leave Type Name <span class="text-danger">*</span></label>
                            <input asp-for="LeaveTypeName" class="form-control" placeholder="e.g., Annual Leave, Sick Leave" />
                            <span asp-validation-for="LeaveTypeName" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter a brief description of this leave type..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-save"></i> Save Leave Type
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
