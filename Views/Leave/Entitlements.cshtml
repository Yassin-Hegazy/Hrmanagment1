@{
    ViewData["Title"] = "Assign Leave Entitlements";
    var employees = ViewBag.Employees as IEnumerable<HRMANGMANGMENT.Models.Employee>;
    var leaveTypes = ViewBag.LeaveTypes as IEnumerable<HRMANGMANGMENT.Models.LeaveType>;
}

<div class="container-fluid mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-person-plus"></i> Leave Entitlements</h2>
                <p class="mb-0 opacity-75">Assign and adjust employee leave balances</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Policies" class="btn btn-secondary hover-lift">
                    <i class="bi bi-arrow-left"></i> Back to Policies
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Assign Entitlement Card -->
        <div class="col-md-6 mb-4">
            <div class="card glass-card hover-lift h-100">
                <div class="card-header card-gradient-success">
                    <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Assign Entitlement</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AssignEntitlement" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Employee <span class="text-danger">*</span></label>
                            <select name="employeeId" class="form-select" required>
                                <option value="">-- Select Employee --</option>
                                @if (employees != null)
                                {
                                    @foreach (var emp in employees)
                                    {
                                        <option value="@emp.EmployeeId">@emp.FullName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Leave Type <span class="text-danger">*</span></label>
                            <select name="leaveTypeId" class="form-select" required>
                                <option value="">-- Select Leave Type --</option>
                                @if (leaveTypes != null)
                                {
                                    @foreach (var type in leaveTypes)
                                    {
                                        <option value="@type.LeaveId">@type.LeaveTypeName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Entitlement (days) <span class="text-danger">*</span></label>
                            <input type="number" name="entitlement" class="form-control" step="0.5" min="0" max="365" required placeholder="e.g. 21" />
                        </div>
                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Assign Entitlement
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Adjust Balance Card -->
        <div class="col-md-6 mb-4">
            <div class="card glass-card hover-lift h-100">
                <div class="card-header card-gradient-warning">
                    <h5 class="mb-0"><i class="bi bi-sliders"></i> Adjust Balance</h5>
                </div>
                <div class="card-body">
                    <form asp-action="AdjustBalance" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Employee <span class="text-danger">*</span></label>
                            <select name="employeeId" class="form-select" required>
                                <option value="">-- Select Employee --</option>
                                @if (employees != null)
                                {
                                    @foreach (var emp in employees)
                                    {
                                        <option value="@emp.EmployeeId">@emp.FullName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Leave Type <span class="text-danger">*</span></label>
                            <select name="leaveTypeId" class="form-select" required>
                                <option value="">-- Select Leave Type --</option>
                                @if (leaveTypes != null)
                                {
                                    @foreach (var type in leaveTypes)
                                    {
                                        <option value="@type.LeaveId">@type.LeaveTypeName</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Action <span class="text-danger">*</span></label>
                            <div class="d-flex gap-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="operation" id="opAdd" value="Add" checked>
                                    <label class="form-check-label" for="opAdd"><i class="bi bi-plus-circle text-success"></i> Add Days</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="operation" id="opDeduct" value="Deduct">
                                    <label class="form-check-label" for="opDeduct"><i class="bi bi-dash-circle text-danger"></i> Deduct Days</label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Amount (days) <span class="text-danger">*</span></label>
                            <input type="number" name="amount" class="form-control" step="0.5" min="0.5" required placeholder="e.g. 5" />
                            <small class="text-muted">Enter a positive number</small>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Reason <span class="text-danger">*</span></label>
                            <input type="text" name="reason" class="form-control" required placeholder="Reason for adjustment" />
                        </div>
                        <button type="submit" class="btn btn-warning w-100">
                            <i class="bi bi-sliders"></i> Adjust Balance
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
