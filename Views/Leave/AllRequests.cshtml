@model IEnumerable<HRMANGMANGMENT.Models.LeaveRequest>
@{
    ViewData["Title"] = "All Leave Requests";
}

<div class="container-fluid mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-list-columns-reverse"></i> All Leave Requests</h2>
                <p class="mb-0 opacity-75">View and manage all leave requests (HR Admin)</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="SpecialLeave" class="btn btn-info hover-lift">
                    <i class="bi bi-star"></i> Special Leave
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card glass-card">
        <div class="card-header card-gradient-info">
            <h5 class="mb-0"><i class="bi bi-table"></i> All Requests</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Employee</th>
                            <th>Type</th>
                            <th>Days</th>
                            <th>Submitted</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var request in Model)
                            {
                                <tr>
                                    <td>@request.RequestId</td>
                                    <td><strong>@request.EmployeeName</strong></td>
                                    <td><span class="badge bg-info">@request.LeaveTypeName</span></td>
                                    <td>@request.Duration</td>
                                    <td>@request.SubmissionDate.ToString("MMM dd, yyyy")</td>
                                    <td><span class="badge @request.StatusBadgeClass">@request.Status</span></td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@request.RequestId" class="btn btn-sm btn-outline-info me-1" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (request.Status == "Pending")
                                        {
                                            <form asp-action="Approve" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="requestId" value="@request.RequestId" />
                                                <button type="submit" class="btn btn-sm btn-outline-success" title="Approve">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                            </form>
                                            <form asp-action="Reject" method="post" class="d-inline" onsubmit="var r=prompt('Reason for rejection?'); if(r){this.reason.value=r; return true;} return false;">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="requestId" value="@request.RequestId" />
                                                <input type="hidden" name="reason" value="" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger" title="Reject">
                                                    <i class="bi bi-x-lg"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <a asp-action="OverrideRequest" asp-route-id="@request.RequestId" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-pencil"></i> Manage
                                            </a>
                                        }

                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ccc;"></i>
                                    <p class="text-muted mt-3">No leave requests found</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
