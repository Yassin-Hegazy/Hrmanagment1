@{
    ViewData["Title"] = "Special Leave Configuration";
}

<div class="container mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-star"></i> Special Leave</h2>
                <p class="mb-0 opacity-75">Configure special leave types (maternity, medical, etc.)</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Policies" class="btn btn-secondary hover-lift">
                    <i class="bi bi-arrow-left"></i> Back to Policies
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card glass-card hover-lift">
                <div class="card-header" style="background: linear-gradient(135deg, #8b5cf6, #a78bfa); color: white;">
                    <h5 class="mb-0"><i class="bi bi-gear"></i> Configure Special Leave</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ConfigureSpecialLeave" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-tag"></i> Leave Type Name <span class="text-danger">*</span></label>
                            <select name="leaveType" class="form-select" required>
                                <option value="">-- Select Special Leave Type --</option>
                                <option value="Maternity Leave">Maternity Leave</option>
                                <option value="Paternity Leave">Paternity Leave</option>
                                <option value="Medical Leave">Medical Leave</option>
                                <option value="Bereavement Leave">Bereavement Leave</option>
                                <option value="Sabbatical Leave">Sabbatical Leave</option>
                                <option value="Study Leave">Study Leave</option>
                                <option value="Unpaid Leave">Unpaid Leave</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><i class="bi bi-calendar-range"></i> Maximum Days <span class="text-danger">*</span></label>
                            <input type="number" name="maxDays" class="form-control" min="1" max="365" required placeholder="e.g. 90 for maternity" />
                        </div>

                        <div class="mb-4">
                            <label class="form-label"><i class="bi bi-file-earmark-text"></i> Eligibility Rules <span class="text-danger">*</span></label>
                            <textarea name="eligibilityRules" class="form-control" rows="4" required placeholder="Define who is eligible...
Example: Minimum 1 year employment, Full-time employees only"></textarea>
                        </div>

                        <button type="submit" class="btn btn-lg w-100" style="background: linear-gradient(135deg, #8b5cf6, #a78bfa); color: white;">
                            <i class="bi bi-save"></i> Save Special Leave Configuration
                        </button>
                    </form>
                </div>
            </div>

            <!-- Common Special Leave Types Reference -->
            <div class="card glass-card mt-4">
                <div class="card-header card-gradient-info">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> Common Special Leave Types</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-circle text-success"></i> <strong>Maternity:</strong> 60-90 days</li>
                                <li><i class="bi bi-check-circle text-success"></i> <strong>Paternity:</strong> 10-14 days</li>
                                <li><i class="bi bi-check-circle text-success"></i> <strong>Bereavement:</strong> 3-5 days</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled">
                                <li><i class="bi bi-check-circle text-success"></i> <strong>Medical:</strong> As per doctor certificate</li>
                                <li><i class="bi bi-check-circle text-success"></i> <strong>Sabbatical:</strong> 30-180 days (tenure-based)</li>
                                <li><i class="bi bi-check-circle text-success"></i> <strong>Study:</strong> Per company policy</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
