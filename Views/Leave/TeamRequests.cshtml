@model IEnumerable<HRMANGMANGMENT.Models.LeaveRequest>
@{
    ViewData["Title"] = "Team Leave Requests";
}

<div class="container-fluid mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-people"></i> Team Leave Requests</h2>
                <p class="mb-0 opacity-75">Review and approve/reject leave requests from your team</p>
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-warning fs-6">
                    <i class="bi bi-hourglass-split"></i> @(Model?.Count() ?? 0) Pending
                </span>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        @foreach (var request in Model)
        {
            <div class="card glass-card mb-4">
                <div class="card-header card-gradient-warning d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-person"></i> @request.EmployeeName
                        @if (request.IsFlagged)
                        {
                            <span class="badge bg-danger ms-2" title="@request.FlagReason">
                                <i class="bi bi-flag-fill"></i> Irregular Pattern
                            </span>
                        }
                    </h5>
                    <span class="badge bg-info">@request.LeaveTypeName - @request.Duration days</span>
                </div>

                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label class="form-label text-muted small">Submitted</label>
                            <p class="fw-bold">@request.SubmissionDate.ToString("MMMM dd, yyyy")</p>
                        </div>
                        <div class="col-md-8">
                            <label class="form-label text-muted small">Reason</label>
                            <p>@(request.Justification ?? "No reason provided")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <!-- Approve Form -->
                            <form asp-action="Approve" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="requestId" value="@request.RequestId" />
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-check-lg"></i> Approve Request
                                </button>
                            </form>
                        </div>
                        <div class="col-md-6">
                            <!-- Flag Form -->
                            <form asp-action="FlagIrregular" method="post" class="d-flex gap-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="employeeId" value="@request.EmployeeId" />
                                <input type="text" name="reason" class="form-control" placeholder="Flag reason..." />
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-flag"></i> Flag
                                </button>
                            </form>
                        </div>
                    </div>

                    <hr />

                    <!-- Rejection Form (inline, no modal) -->
                    <form asp-action="Reject" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="requestId" value="@request.RequestId" />
                        <div class="row align-items-end">
                            <div class="col-md-9">
                                <label class="form-label"><i class="bi bi-x-circle text-danger"></i> Reject with Reason</label>
                                <input type="text" name="reason" class="form-control" placeholder="Enter rejection reason..." required />
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-outline-danger w-100">
                                    <i class="bi bi-x-lg"></i> Reject
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        }
    }
    else
    {
        <div class="card glass-card">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                <h5 class="mt-3 text-muted">No Pending Requests</h5>
                <p class="text-muted">All team leave requests have been processed.</p>
            </div>
        </div>
    }
</div>
