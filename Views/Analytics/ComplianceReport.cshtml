@using HRMANGMANGMENT.Models
@model ComplianceReportContainer
@{
    ViewData["Title"] = "Compliance Report";
    var departments = ViewBag.Departments as IEnumerable<Department> ?? Enumerable.Empty<Department>();
}

<div class="container-fluid mt-4">
    <!-- Page Header -->
    <div class="page-header mb-4">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-shield-check"></i> Compliance Report</h2>
                <p class="text-muted mb-0">Monitor contracts and attendance compliance</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Department</label>
                    <select name="departmentId" class="form-select">
                        <option value="">All Departments</option>
                        @foreach (var dept in departments)
                        {
                            <option value="@dept.DepartmentId" 
                                selected="@(ViewBag.SelectedDepartment == dept.DepartmentId)">
                                @dept.DepartmentName
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Days Threshold</label>
                    <input type="number" name="daysThreshold" class="form-control" 
                           value="@ViewBag.DaysThreshold" min="1" max="365">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Attendance From</label>
                    <input type="date" name="dateFrom" class="form-control" 
                           value="@(((DateTime)ViewBag.DateFrom).ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-2">
                    <label class="form-label">Attendance To</label>
                    <input type="date" name="dateTo" class="form-control" 
                           value="@(((DateTime)ViewBag.DateTo).ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Generate Report
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Contracts Compliance -->
    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="bi bi-file-earmark-text"></i> Contracts Compliance</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.ContractRows.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Employee</th>
                                <th>Department</th>
                                <th>Contract End Date</th>
                                <th>Days Remaining</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in Model.ContractRows)
                            {
                                <tr>
                                    <td>@row.EmployeeName</td>
                                    <td>@row.DepartmentName</td>
                                    <td>@row.ContractEndDate.ToString("MMM dd, yyyy")</td>
                                    <td>@row.DaysRemaining days</td>
                                    <td>
                                        <span class="badge @row.StatusBadgeClass">@row.Status</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                    <p class="mt-2 text-muted">No contracts expiring within @ViewBag.DaysThreshold days</p>
                </div>
            }
        </div>
    </div>

    <!-- Attendance Compliance -->
    <div class="card">
        <div class="card-header bg-warning">
            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Attendance Compliance</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.AttendanceRows.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Employee</th>
                                <th>Department</th>
                                <th>Late Count</th>
                                <th>Short Time Count</th>
                                <th>Total Days</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var row in Model.AttendanceRows)
                            {
                                <tr>
                                    <td>@row.EmployeeName</td>
                                    <td>@row.DepartmentName</td>
                                    <td>@row.LateCount</td>
                                    <td>@row.ShortTimeCount</td>
                                    <td>@row.TotalDays</td>
                                    <td>
                                        <span class="badge @row.ComplianceBadgeClass">@row.ComplianceFlag</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-info-circle text-info" style="font-size: 3rem;"></i>
                    <p class="mt-2 text-muted">Set date range and click "Generate Report" to view attendance compliance</p>
                </div>
            }
        </div>
    </div>
</div>
