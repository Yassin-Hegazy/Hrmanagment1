@model HRMANGMANGMENT.Models.DepartmentStatistics
@{
    ViewData["Title"] = $"Department Details - {Model.DepartmentName}";
}

<div class="container mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-building"></i> @Model.DepartmentName</h2>
                <p class="mb-0 opacity-75">Detailed department statistics</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="DepartmentStats" class="btn btn-secondary hover-lift">
                    <i class="bi bi-arrow-left"></i> Back to All Departments
                </a>
            </div>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card glass-card h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-people text-primary" style="font-size: 2.5rem;"></i>
                    <h2 class="mt-2 mb-0">@Model.TotalEmployees</h2>
                    <p class="text-muted mb-0">Total Employees</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card glass-card h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-check-circle text-success" style="font-size: 2.5rem;"></i>
                    <h2 class="mt-2 mb-0">@Model.ActiveEmployees</h2>
                    <p class="text-muted mb-0">Active</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card glass-card h-100 text-center">
                <div class="card-body">
                    <i class="bi bi-x-circle text-secondary" style="font-size: 2.5rem;"></i>
                    <h2 class="mt-2 mb-0">@(Model.TotalEmployees - Model.ActiveEmployees)</h2>
                    <p class="text-muted mb-0">Inactive</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Age Distribution -->
        <div class="col-lg-12">
            <div class="card glass-card h-100">
                <div class="card-header card-gradient-success">
                    <h5 class="mb-0"><i class="bi bi-calendar3"></i> Age Distribution</h5>
                </div>
                <div class="card-body">
                    @{
                        var ageTotal = Model.Under25 + Model.Age25to34 + Model.Age35to44 + Model.Age45to54 + Model.Over55;
                        if (ageTotal == 0) ageTotal = 1;
                    }
                    <div class="row">
                        <div class="col-md-8">
                            <div class="table-responsive">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <td>Under 25</td>
                                            <td style="width: 60%;">
                                                <div class="progress" style="height: 25px;">
                                                    <div class="progress-bar bg-info" style="width: @((Model.Under25 * 100.0 / ageTotal))%">
                                                        @if (Model.Under25 > 0) { @Model.Under25 }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end"><strong>@(Math.Round((decimal)Model.Under25 / ageTotal * 100, 1))%</strong></td>
                                        </tr>
                                        <tr>
                                            <td>25-34</td>
                                            <td>
                                                <div class="progress" style="height: 25px;">
                                                    <div class="progress-bar bg-primary" style="width: @((Model.Age25to34 * 100.0 / ageTotal))%">
                                                        @if (Model.Age25to34 > 0) { @Model.Age25to34 }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end"><strong>@(Math.Round((decimal)Model.Age25to34 / ageTotal * 100, 1))%</strong></td>
                                        </tr>
                                        <tr>
                                            <td>35-44</td>
                                            <td>
                                                <div class="progress" style="height: 25px;">
                                                    <div class="progress-bar bg-success" style="width: @((Model.Age35to44 * 100.0 / ageTotal))%">
                                                        @if (Model.Age35to44 > 0) { @Model.Age35to44 }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end"><strong>@(Math.Round((decimal)Model.Age35to44 / ageTotal * 100, 1))%</strong></td>
                                        </tr>
                                        <tr>
                                            <td>45-54</td>
                                            <td>
                                                <div class="progress" style="height: 25px;">
                                                    <div class="progress-bar bg-warning" style="width: @((Model.Age45to54 * 100.0 / ageTotal))%">
                                                        @if (Model.Age45to54 > 0) { @Model.Age45to54 }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end"><strong>@(Math.Round((decimal)Model.Age45to54 / ageTotal * 100, 1))%</strong></td>
                                        </tr>
                                        <tr>
                                            <td>55+</td>
                                            <td>
                                                <div class="progress" style="height: 25px;">
                                                    <div class="progress-bar bg-danger" style="width: @((Model.Over55 * 100.0 / ageTotal))%">
                                                        @if (Model.Over55 > 0) { @Model.Over55 }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-end"><strong>@(Math.Round((decimal)Model.Over55 / ageTotal * 100, 1))%</strong></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <h6 class="text-muted">Age Summary</h6>
                            <div class="d-flex flex-column gap-2">
                                <span class="badge bg-info p-2">Under 25: @Model.Under25</span>
                                <span class="badge bg-primary p-2">25-34: @Model.Age25to34</span>
                                <span class="badge bg-success p-2">35-44: @Model.Age35to44</span>
                                <span class="badge bg-warning p-2">45-54: @Model.Age45to54</span>
                                <span class="badge bg-danger p-2">55+: @Model.Over55</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
