@model HRMANGMANGMENT.Models.ComplianceReport
@{
    ViewData["Title"] = "Compliance Report";
    var departments = ViewBag.Departments as IEnumerable<HRMANGMANGMENT.Models.Department>;
    var selectedDept = ViewBag.SelectedDepartment as int?;
}

<div class="container-fluid mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-shield-check"></i> Compliance Report</h2>
                <p class="mb-0 opacity-75">Generated on @Model.ReportDate.ToString("MMMM dd, yyyy HH:mm")</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Index" class="btn btn-secondary hover-lift me-2">
                    <i class="bi bi-arrow-left"></i> Dashboard
                </a>
                <a asp-action="Diversity" class="btn btn-success hover-lift">
                    <i class="bi bi-people"></i> Diversity Report
                </a>
            </div>
        </div>
    </div>

    <!-- Filter -->
    <div class="card glass-card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-9">
                    <label class="form-label">Filter by Department</label>
                    <select name="departmentId" class="form-select">
                        <option value="">All Departments</option>
                        @if (departments != null)
                        {
                            @foreach (var dept in departments)
                            {
                                <option value="@dept.DepartmentId" selected="@(selectedDept == dept.DepartmentId)">@dept.DepartmentName</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel"></i> Generate Report
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Metrics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card glass-card h-100 border-primary">
                <div class="card-body text-center">
                    <i class="bi bi-people text-primary" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.TotalEmployees</h3>
                    <p class="text-muted mb-0">Total Employees</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card glass-card h-100 border-success">
                <div class="card-body text-center">
                    <i class="bi bi-file-check text-success" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.ActiveContracts</h3>
                    <p class="text-muted mb-0">Active Contracts</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card glass-card h-100 border-warning">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle text-warning" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.ExpiringIn30Days</h3>
                    <p class="text-muted mb-0">Expiring in 30 Days</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card glass-card h-100 border-danger">
                <div class="card-body text-center">
                    <i class="bi bi-x-octagon text-danger" style="font-size: 2rem;"></i>
                    <h3 class="mt-2 mb-0">@Model.ExpiredContracts</h3>
                    <p class="text-muted mb-0">Expired Contracts</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Actions -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card glass-card h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-hourglass-split"></i> Pending Approvals</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                        <div>
                            <i class="bi bi-calendar-event text-primary"></i>
                            <span class="ms-2">Leave Requests</span>
                        </div>
                        <span class="badge bg-warning fs-6">@Model.PendingLeaveRequests</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-geo-alt text-info"></i>
                            <span class="ms-2">Mission Approvals</span>
                        </div>
                        <span class="badge bg-warning fs-6">@Model.PendingMissionApprovals</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card glass-card h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-clipboard-data"></i> Summary</h5>
                </div>
                <div class="card-body">
                    <p><strong>Report Date:</strong> @Model.ReportDate.ToString("MMMM dd, yyyy")</p>
                    <p><strong>Compliance Score:</strong> 
                        @{
                            var score = Model.ExpiredContracts == 0 && Model.PendingLeaveRequests < 10 ? "High" : 
                                       (Model.ExpiredContracts <= 5 ? "Medium" : "Low");
                            var scoreClass = score == "High" ? "bg-success" : (score == "Medium" ? "bg-warning" : "bg-danger");
                        }
                        <span class="badge @scoreClass">@score</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Compliance Issues -->
    <div class="card glass-card">
        <div class="card-header card-gradient-danger">
            <h5 class="mb-0"><i class="bi bi-exclamation-circle"></i> Compliance Issues</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Issues != null && Model.Issues.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Severity</th>
                                <th>Category</th>
                                <th>Employee</th>
                                <th>Issue</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var issue in Model.Issues.OrderByDescending(i => i.Severity))
                            {
                                <tr>
                                    <td><span class="badge @issue.SeverityBadgeClass">@issue.Severity</span></td>
                                    <td>@issue.Category</td>
                                    <td><strong>@issue.EmployeeName</strong></td>
                                    <td>@issue.Description</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-check-circle text-success" style="font-size: 4rem;"></i>
                    <h5 class="mt-3 text-success">No Compliance Issues</h5>
                    <p class="text-muted">All systems are compliant!</p>
                </div>
            }
        </div>
    </div>
</div>
