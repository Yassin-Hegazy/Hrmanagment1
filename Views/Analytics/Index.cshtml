@model HRMANGMANGMENT.Models.AnalyticsDashboard
@{
    ViewData["Title"] = "Analytics Dashboard";
}

<div class="container-fluid mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-graph-up"></i> Analytics Dashboard</h2>
                <p class="mb-0 opacity-75">Overview of HR metrics and statistics</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="ComplianceReport" class="btn btn-info hover-lift me-2">
                    <i class="bi bi-shield-check"></i> Compliance Report
                </a>
                <a asp-action="DiversityReport" class="btn btn-success hover-lift">
                    <i class="bi bi-people"></i> Diversity Report
                </a>
            </div>
        </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="card glass-card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill text-primary" style="font-size: 2.5rem;"></i>
                    <h2 class="mt-3 mb-0">@Model.TotalEmployees</h2>
                    <p class="text-muted mb-0">Total Employees</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card glass-card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-building text-info" style="font-size: 2.5rem;"></i>
                    <h2 class="mt-3 mb-0">@Model.TotalDepartments</h2>
                    <p class="text-muted mb-0">Departments</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card glass-card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-file-earmark-check text-success" style="font-size: 2.5rem;"></i>
                    <h2 class="mt-3 mb-0">@Model.ActiveContracts</h2>
                    <p class="text-muted mb-0">Active Contracts</p>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="card glass-card h-100">
                <div class="card-body text-center">
                    <i class="bi bi-person-plus text-warning" style="font-size: 2.5rem;"></i>
                    <h2 class="mt-3 mb-0">@Model.NewHiresThisMonth</h2>
                    <p class="text-muted mb-0">New Hires This Month</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Items Row -->
    <div class="row g-4 mb-4">
        <div class="col-lg-4">
            <div class="card glass-card h-100 border-warning">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-hourglass-split"></i> Pending Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span>Leave Requests</span>
                        <span class="badge bg-warning">@Model.PendingLeaveRequests</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <span>Active Missions</span>
                        <span class="badge bg-info">@Model.ActiveMissions</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Expiring Contracts</span>
                        <span class="badge bg-danger">@Model.ContractsExpiringThisMonth</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card glass-card h-100">
                <div class="card-header card-gradient-primary">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Department Overview</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Department</th>
                                    <th>Total</th>
                                    <th>Active</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dept in Model.DepartmentStats.Take(5))
                                {
                                    <tr>
                                        <td><strong>@dept.DepartmentName</strong></td>
                                        <td><span class="badge bg-primary">@dept.TotalEmployees</span></td>
                                        <td><span class="badge bg-success">@dept.ActiveEmployees</span></td>
                                        <td>
                                            <a asp-action="DepartmentDetails" asp-route-id="@dept.DepartmentId" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="DepartmentStats" class="btn btn-link">View All Departments <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
