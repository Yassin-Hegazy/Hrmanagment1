@model HRMANGMANGMENT.Models.Department

@{
    ViewData["Title"] = "Department Details";
    var employees = ViewBag.Employees as IEnumerable<HRMANGMANGMENT.Models.Employee>;
}

<div class="container mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-building-fill"></i> Department Details</h2>
                <p class="mb-0 opacity-75">@Model.DepartmentName</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Edit" asp-route-id="@Model.DepartmentId" class="btn btn-warning hover-lift">
                    <i class="bi bi-pencil-fill"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary hover-lift">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show animate-slide-right" role="alert">
            <i class="bi bi-check-circle-fill"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row stagger-animation">
        <!-- Department Information -->
        <div class="col-md-6 mb-4">
            <div class="card glass-card hover-lift h-100 animate-slide-left">
                <div class="card-header card-gradient-primary">
                    <h5 class="mb-0"><i class="bi bi-info-circle-fill"></i> Department Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5"><i class="bi bi-hash text-primary"></i> Department ID:</dt>
                        <dd class="col-sm-7"><strong>#@Model.DepartmentId</strong></dd>

                        <dt class="col-sm-5"><i class="bi bi-building text-info"></i> Name:</dt>
                        <dd class="col-sm-7"><strong>@Model.DepartmentName</strong></dd>

                        <dt class="col-sm-5"><i class="bi bi-info-circle text-success"></i> Purpose:</dt>
                        <dd class="col-sm-7">@(string.IsNullOrEmpty(Model.Purpose) ? "Not specified" : Model.Purpose)</dd>

                        <dt class="col-sm-5"><i class="bi bi-person-badge text-warning"></i> Department Head:</dt>
                        <dd class="col-sm-7">
                            @if (!string.IsNullOrEmpty(Model.DepartmentHeadName))
                            {
                                <span class="badge bg-warning">@Model.DepartmentHeadName</span>
                            }
                            else
                            {
                                <span class="text-muted">Not assigned</span>
                            }
                        </dd>

                        <dt class="col-sm-5"><i class="bi bi-people text-primary"></i> Total Employees:</dt>
                        <dd class="col-sm-7"><h4 class="gradient-text mb-0">@Model.EmployeeCount</h4></dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- Statistics Card -->
        <div class="col-md-6 mb-4">
            <div class="card glass-card hover-lift h-100 animate-slide-right">
                <div class="card-header card-gradient-success">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Department Statistics</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-3">
                            <div class="stat-box">
                                <i class="bi bi-people text-primary" style="font-size: 3rem;"></i>
                                <h2 class="gradient-text mt-2">@Model.EmployeeCount</h2>
                                <p class="text-muted mb-0">Team Members</p>
                            </div>
                        </div>
                        <div class="col-6 mb-3">
                            <div class="stat-box">
                                <i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>
                                <h2 class="gradient-text mt-2">@(employees?.Count(e => e.IsActive) ?? 0)</h2>
                                <p class="text-muted mb-0">Active</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Department Employees -->
    @if (employees != null && employees.Any())
    {
        <div class="card glass-card hover-lift animate-fade-in">
            <div class="card-header card-gradient-info">
                <h5 class="mb-0"><i class="bi bi-people-fill"></i> Department Employees</h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th><i class="bi bi-hash"></i> ID</th>
                                <th><i class="bi bi-person"></i> Name</th>
                                <th><i class="bi bi-envelope"></i> Email</th>
                                <th><i class="bi bi-telephone"></i> Phone</th>
                                <th><i class="bi bi-briefcase"></i> Position</th>
                                <th><i class="bi bi-activity"></i> Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in employees)
                            {
                                <tr>
                                    <td><strong class="text-primary">#@employee.EmployeeId</strong></td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(employee.ProfileImage))
                                            {
                                                <img src="~/uploads/profiles/@employee.ProfileImage" 
                                                     alt="@employee.FullName" 
                                                     class="rounded-circle me-3"
                                                     style="width: 40px; height: 40px; object-fit: cover; border: 2px solid var(--german-gold);" />
                                            }
                                            else
                                            {
                                                <div class="rounded-circle me-3 d-flex align-items-center justify-content-center" 
                                                     style="width: 40px; height: 40px; background: linear-gradient(135deg, var(--german-gold), var(--dark-gold)); border: 2px solid var(--german-black);">
                                                    <i class="bi bi-person-fill" style="font-size: 1.2rem; color: var(--german-black);"></i>
                                                </div>
                                            }
                                            <strong>@employee.FullName</strong>
                                        </div>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(employee.Email))
                                        {
                                            <a href="mailto:@employee.Email" class="text-decoration-none">
                                                <i class="bi bi-envelope-fill text-info"></i> @employee.Email
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>@employee.Phone</td>
                                    <td>@employee.PositionTitle</td>
                                    <td>
                                        @if (employee.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle-fill"></i> Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle-fill"></i> Inactive
                                            </span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card glass-card text-center py-5 animate-fade-in">
            <div class="card-body">
                <div class="animate-float">
                    <i class="bi bi-people" style="font-size: 5rem; color: #ccc;"></i>
                    <h4 class="mt-3 text-muted">No Employees in This Department</h4>
                    <p class="text-muted">Assign employees to this department to see them here</p>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .stat-box {
        padding: 1.5rem;
        border-radius: 12px;
        transition: all 0.3s ease;
    }
    
    .stat-box:hover {
        transform: translateY(-10px);
        box-shadow: 0 12px 24px rgba(0,0,0,0.15);
    }
    
    .animate-float {
        animation: float 3s ease-in-out infinite;
    }
</style>
