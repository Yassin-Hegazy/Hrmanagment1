@model IEnumerable<HRMANGMANGMENT.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container-fluid mt-4 animate-fade-in">
    <!-- Page Header -->
    <div class="page-header stagger-animation">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2><i class="bi bi-building-fill"></i> Department Management</h2>
                <p class="mb-0 opacity-75">Organize and manage your organizational structure</p>
            </div>
            <div class="col-md-6 text-end">
                <a asp-action="Create" class="btn btn-light btn-lg hover-lift">
                    <i class="bi bi-plus-circle"></i> Add New Department
                </a>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show animate-slide-right" role="alert">
            <i class="bi bi-check-circle-fill"></i> <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show animate-slide-right" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i> <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Department Cards Grid -->
    <div class="row stagger-animation g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var department in Model)
            {
                <div class="col-md-4">
                    <div class="card glass-card hover-lift h-100 animate-scale">
                        <div class="card-header card-gradient-primary">
                            <h5 class="mb-0">
                                <i class="bi bi-building"></i> @department.DepartmentName
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <p class="text-muted mb-2">
                                    <i class="bi bi-info-circle text-info"></i> <strong>Purpose:</strong>
                                </p>
                                <p>@(string.IsNullOrEmpty(department.Purpose) ? "Not specified" : department.Purpose)</p>
                            </div>

                            <div class="mb-3">
                                <p class="text-muted mb-2">
                                    <i class="bi bi-person-badge text-warning"></i> <strong>Department Head:</strong>
                                </p>
                                <p>
                                    @if (!string.IsNullOrEmpty(department.DepartmentHeadName))
                                    {
                                        <span class="badge bg-warning">@department.DepartmentHeadName</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not assigned</span>
                                    }
                                </p>
                            </div>

                            <div class="mb-3">
                                <p class="text-muted mb-2">
                                    <i class="bi bi-people text-success"></i> <strong>Employees:</strong>
                                </p>
                                <h3 class="gradient-text">@department.EmployeeCount</h3>
                            </div>

                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@department.DepartmentId" 
                                   class="btn btn-info">
                                    <i class="bi bi-eye-fill"></i> View Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@department.DepartmentId" 
                                   class="btn btn-warning">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="card glass-card text-center py-5">
                    <div class="card-body">
                        <div class="animate-float">
                            <i class="bi bi-building" style="font-size: 5rem; color: #ccc;"></i>
                            <h3 class="mt-3 text-muted">No Departments Found</h3>
                            <p class="text-muted">Get started by creating your first department</p>
                            <a asp-action="Create" class="btn btn-primary btn-lg mt-3">
                                <i class="bi bi-plus-circle"></i> Create Department
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Summary Card -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card glass-card hover-lift animate-fade-in">
                    <div class="card-header card-gradient-success">
                        <h5 class="mb-0"><i class="bi bi-graph-up"></i> Department Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <div class="stat-box">
                                    <i class="bi bi-building text-primary" style="font-size: 3rem;"></i>
                                    <h2 class="gradient-text mt-2">@Model.Count()</h2>
                                    <p class="text-muted">Total Departments</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="stat-box">
                                    <i class="bi bi-people text-success" style="font-size: 3rem;"></i>
                                    <h2 class="gradient-text mt-2">@Model.Sum(d => d.EmployeeCount)</h2>
                                    <p class="text-muted">Total Employees</p>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="stat-box">
                                    <i class="bi bi-person-badge text-warning" style="font-size: 3rem;"></i>
                                    <h2 class="gradient-text mt-2">@Model.Count(d => d.DepartmentHeadId != null)</h2>
                                    <p class="text-muted">Assigned Heads</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .animate-float {
        animation: float 3s ease-in-out infinite;
    }
    
    .stat-box {
        padding: 1.5rem;
        border-radius: 12px;
        transition: all 0.3s ease;
    }
    
    .stat-box:hover {
        transform: translateY(-10px);
        box-shadow: 0 12px 24px rgba(0,0,0,0.15);
    }
</style>
